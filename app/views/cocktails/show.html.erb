<h1>Cocktails#show</h1>
<p>Name: <%= @cocktail.name %></p>
<p><%= image_tag @cocktail.picture.url(:medium) %></p>
  <ul>
    <% @cocktail.doses.each do |d| %>
      <li>
        <%= Ingredient.find(d.ingredient_id).name %>
        (dose: <%= d.amount %>)
        - <%= link_to 'remove dose', cocktail_dose_path(@cocktail, d),
                      method: :delete, data: { confirm: 'Are you sure?' }%>
      </li>
    <% end %>
  </ul>
<p>
<%= link_to 'add dose', new_cocktail_dose_path(@cocktail)%>
</p>
